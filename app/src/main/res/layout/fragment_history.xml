<?xml version="1.0" encoding="utf-8"?>
<com.nes.transfragment.LinearLayoutAnimator xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@color/wf_setup_wizard_background_color"
                                            tools:context="com.tempifi.app.ui.home.HistoryFragment">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <include android:id="@+id/screenTitle" layout="@layout/screen_title"/>

        <View
                android:background="@color/light_gray"
                android:layout_width="match_parent" android:layout_height="1dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView

                    android:id="@+id/historyRecyclerView"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            <!--<ListView android:id="@+id/sensorsListView"
                      android:visibility="gone"
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
            >
            </ListView>-->

        </LinearLayout>
    </LinearLayout>
</com.nes.transfragment.LinearLayoutAnimator>